<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientCrudMobile.App">
    <Application.Resources>
        <Color x:Key="Green">#43a047</Color>
        <Color x:Key="Red">#d32f2f</Color>

        <Style TargetType="NavigationPage">
            <Setter Property="BarBackgroundColor" Value="{StaticResource Green}" />
            <Setter Property="BarTextColor" Value="White" />
        </Style>

        <Style TargetType="StackLayout" x:Key="mainContent">
            <Setter Property="Padding" Value="10"/>
        </Style>

        <Style TargetType="Label" x:Key="title">
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="FontSize" Value="Body"/>
        </Style>
        

        <Style TargetType="Button">
            <Setter Property="FontSize" Value="Medium"/>
        </Style>


        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="BackgroundColor" Value="{StaticResource Green}"/>
            <Setter Property="TextColor" Value="White"/>
        </Style>
        
        <Style TargetType="Button" x:Key="RedButton">
            <Setter Property="BackgroundColor" Value="{StaticResource Red}"/>
            <Setter Property="TextColor" Value="White"/>
        </Style>
    </Application.Resources>
</Application>